<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Platforms>AnyCPU;x64</Platforms>
    
    <OutputPath>..\lib\</OutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>1701;1702;1591</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- Startup properties -->
    <PackageRepositories>$(MsBuildThisFileDirectory)..\..</PackageRepositories>
    
    <Version>0.3.0</Version>
    <Authors>NewTek, Motzi, sebl, vvvv group</Authors>
    <Company />
    <Product />
    <Description>NewTek NDI Plugins for VVVV Gamma</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>LGPL-3.0-only</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.0.1" />
    <PackageReference Include="Stride.Rendering" Version="4.0.1.1428" />
    <PackageReference Include="VL.Audio" Version="1.0.11" />
    <PackageReference Include="VL.Core" Version="2021.4.10" />
    <PackageReference Include="VL.Skia" Version="2021.4.10" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="NAudio">
      <HintPath>..\dependencies\NAudio.dll</HintPath>
    </Reference>
    <Reference Include="VVVV.Audio.Core">
      <HintPath>..\dependencies\VVVV.Audio.Core.dll</HintPath>
    </Reference>
    <Reference Include="VVVV.Audio.Signals">
      <HintPath>..\dependencies\VVVV.Audio.Signals.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
